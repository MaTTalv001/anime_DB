<div class="card mt-3 mx-3 p-0" style="width: 18rem;">
	<div class="card-title text-center card-header">
   <h5 class="text-truncate"><%= work.title %></h5>
  </div>
  
  <div class="card-img-top img-thumbnail img-fluid">
    <%= image_tag work.image_url, class: 'img-fluid'%>
  </div>
	
  <div class="card-body">
    <p class="card-text">
      <%= work.year %>
      <%= work.season%>
    </p>
  </div>
  
  <div class="card-body text-end">
    <%= link_to '公式サイト', work.official_site_url, target: '_blank' %>
    <%= link_to work.twitter_url, class: 'btn btn-dark text-end', target: '_blank' do %>
      <i class="bi bi-twitter"></i>
    <% end %>
  </div>

</div>

